<resources>
    <!-- Base application theme -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/mint_30</item>
        <item name="colorPrimaryVariant">@color/mint_70</item>
        <item name="colorOnPrimary">@color/black_3</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/pink_30</item>
        <item name="colorSecondaryVariant">@color/pink_70</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>